<link href="/assets/css/users/user-profile.css" rel="stylesheet" type="text/css" />

<div class="container">
    <div class="row">
        <div class="card col-xl-4 col-lg-6 col-md-5 col-sm-12 layout-top-spacing">
            <div class="card-body">
                <h4> {{data.name}}</h4>

                <p class="text-muted">{{data.description}}</p>

                <div class="row mt-3">
                    <p class="col-12">Creado por: <b>{{data.createReference.username}}</b></p>
                    <p class="col-12">Creado el: <b>{{#formatDate data.create_at}} {{this}} {{/formatDate}}</b></p>
                    <p class="col-12">Última actualización: <b>{{#formatDate data.update_at}} {{this}} {{/formatDate}}</b></p>
                </div>

                {{#validRoot user}}
                    <div class="row mt-3">
                        <a href="/report/equipmet/{{../data.equipmentId}}" target="_blank" class="btn btn-danger bi bi-filetype-pdf"> Reporte</a>
                    </div>
                {{/validRoot}}

            </div>
        </div>

        <div class="col-xl-8 col-lg-6 col-md-5 col-sm-12 layout-top-spacing">
            <div class="card">
                <form method="post" action="/stock/equipment/{{data.equipmentId}}/update" class="card-body form-row col-12 col-lg-6 m-auto">

                    <div class="form-group col-12">
                        <label for="t-title" class="">Nombre:</label>
                        <input id="t-title" type="text" value="{{data.name}}" name="name" class="form-control" required>
                    </div>  

                    <div class="form-group col-12">
                        <label for="t-description" class="">Descripción:</label>
                        <input id="t-description" type="text" value="{{data.description}}" name="description" class="form-control" required>
                    </div>                    

                    <div class="col-12 mt-1">
                        <input type="submit" class="btn btn-primary" value="actualizar" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
