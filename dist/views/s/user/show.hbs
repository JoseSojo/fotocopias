<link href="/assets/css/users/user-profile.css" rel="stylesheet" type="text/css" />

<style>
    .main {
        grid-template-columns: ;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-xl-4 col-lg-6 col-md-5 col-sm-12 layout-top-spacing">
            <div class="user-profile layout-spacing">
                <div class="widget-content widget-content-area">
                    <div class="d-flex justify-content-between">
                        <h3 class="">Perfil</h3>
                        {{#validRoot user}}
                            <a href="/report/user/{{../data.userId}}" target="_blank" class="mt-2 edit-profile">PDF</a>
                        {{/validRoot}}
                    </div>
                    <div class="text-center user-info">
                        <p class="">{{data.name}} {{data.lastname}}</p>
                    </div>
                    <div class="user-info-list">
                        <div class="">
                            <ul class="contacts-block list-unstyled">
                                <li class="contacts-block__item"> Usuario: <b>{{data.username}}</b> </li>
                                <li class="contacts-block__item"> Correo: <b>{{data.email}}</b> </li>
                            </ul>
                        </div>                                    
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-8 col-lg-6 col-md-5 col-sm-12 layout-top-spacing">
            <div class="card">
                <div class="card-body">
                    <h5 class=""> Servicios recientes: <b>({{data._count.service}})</b> </h5>
                    <table class="table table-sm table-bordered table-hover">
                        {{#each data.service}}
                            <tr>
                                <td class="text-center">{{this.date}}</td>
                                <td class="text-center">{{this.description}}</td></tr>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
